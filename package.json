{
	"name": "chinotto",
	"version": "v1.0.0",
	"description": "Custom Chai assertions, mainly filesystem-related.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"keywords": ["chai", "plugin", "assertion", "filesystem", "testing"],
	"repository": "https://github.com/Alhadis/Chinotto",
	"license": "ISC",
	"engines": {"node": ">=v8.16.1"},
	"files": ["index.js", "register.js"],
	"peerDependencies": {"chai": ">3 <5"},
	"devDependencies": {
		"@alhadis/eslint-config": "^2.3.4",
		"chai":                   ">3 <5",
		"eslint":                 "^7.32.0",
		"eslint-plugin-import":   "^2.24.2",
		"jsdoc":                  "^3.6.3",
		"jsdom":                  "^15.1.1",
		"karma-coverage":         "^2.0.1",
		"karma-chrome-launcher":  "^3.1.0",
		"karma-mocha-reporter":   "^2.2.5",
		"karma-mocha":            "^1.3.0",
		"karma":                  "^4.3.0",
		"mocha-when":             "^1.0.1",
		"mocha":                  "^6.2.0",
		"nyc":                    "^14.1.1"
	},
	"scripts": {
		"cover": "make coverage",
		"lint":  "make lint",
		"test":  "make test"
	},
	"eslintConfig": {
		"extends": "@alhadis",
		"env": {
			"amd": true
		},
		"globals": {
			"expect": true,
			"when": true
		},
		"overrides": [{
			"files": ["index.js"],
			"rules": {
				"func-style": 0,
				"keyword-spacing": 0
			}
		}]
	},
	"nyc": {
		"all": true,
		"clean": false,
		"reporter": "text",
		"include": [
			"index.js",
			"register.js"
		]
	}
}
