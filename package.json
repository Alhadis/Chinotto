	"engines": {"node": ">=8.0.0"},
	"files": ["index.js", "register.js"],
	"dependencies": {"chai": "*"},
	"devDependencies": {
		"eslint":                 "^6.3.0",
		"eslint-plugin-import":   "^2.18.2",
		"jsdoc":                  "^3.6.3",
		"jsdom":                  "^15.1.1",
		"karma-coverage":         "^2.0.1",
		"karma-chrome-launcher":  "^3.1.0",
		"karma-mocha-reporter":   "^2.2.5",
		"karma-mocha":            "^1.3.0",
		"karma":                  "^4.3.0",
		"mocha-when":             "^1.0.1",
		"mocha":                  "^6.2.0",
		"nyc":                    "^14.1.1"
	},
	"scripts": {
		"cover": "make coverage",
		"lint":  "make lint",
		"test":  "make test"
	},
	"nyc": {
