{
	"name": "chinotto",
	"version": "v0.0.0",
	"description": "Custom Chai assertions, mainly filesystem-related.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"keywords": ["chai", "plugin", "assertion", "filesystem", "testing"],
	"repository": "https://github.com/Alhadis/Chinotto",
	"license": "ISC",
	"engines": {"node": ">=8.0.0"},
	"files": ["index.js"],
	"dependencies": {"chai": "*"},
	"devDependencies": {
		"@alhadis/eslint-config": "^1.2.0",
		"eslint":     "^6.3.0",
		"mocha":      "^6.2.0",
		"mocha-when": "^1.0.1",
		"nyc":        "^14.1.1"
	},
	"scripts": {
		"cover": "npx nyc npm --silent run test",
		"lint":  "npx eslint",
		"test":  "npx mocha"
	},
	"eslintConfig": {
		"extends": "@alhadis",
		"globals": {
			"expect": true,
			"when": true
		},
		"overrides": [{
			"files": ["lib/extensions.js"],
			"rules": {"keyword-spacing": 0}
		},{
			"files": ["lib/utils.js"],
			"rules": {"func-style": 0}
		}]
	},
	"nyc": {
		"all": true,
		"reporter": "text"
	}
}
