{
	"name": "chinotto",
	"version": "v0.0.0",
	"description": "Custom Chai assertions, mainly filesystem-related.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"keywords": ["chai", "plugin", "assertion", "filesystem", "testing"],
	"repository": "https://github.com/Alhadis/Chinotto",
	"license": "ISC",
	"engines": {"node": ">=8.0.0"},
	"main": "index.js",
	"files": ["browser.*", "index.*"],
	"dependencies": {"chai": "*"},
	"devDependencies": {
		"@alhadis/eslint-config": "^1.2.0",
		"eslint":                 "^6.3.0",
		"jsdom":                  "^15.1.1",
		"karma-chrome-launcher":  "^3.1.0",
		"karma-mocha-reporter":   "^2.2.5",
		"karma-mocha":            "^1.3.0",
		"karma":                  "^4.3.0",
		"mocha-when":             "^1.0.1",
		"mocha":                  "^6.2.0",
		"nyc":                    "^14.1.1",
		"rollup":                 "^1.20.3"
	},
	"scripts": {
		"cover": "make coverage",
		"lint":  "make lint",
		"test":  "make test"
	},
	"eslintConfig": {
		"extends": "@alhadis",
		"rules": {"func-style": 0},
		"globals": {
			"globalThis": true,
			"expect": true,
			"when": true
		},
		"overrides": [{
			"files": ["lib/filesystem.mjs"],
			"rules": {"keyword-spacing": 0}
		}]
	},
	"eslintIgnore": [
		"index.js",
		"index.mjs"
	],
	"nyc": {
		"all": true,
		"clean": false,
		"extensions": ["js", "mjs"],
		"reporter": "text",
		"include": [
			"browser.*",
			"index.*",
			"lib/*.mjs"
		]
	}
}
